
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap.min.css.map">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css"
          integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v29.1.0/dist/font-face.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="/Areas/Admin/Content/customStyles.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark py-0">
        <div class="container">
            <a href="@Url.Action("Index", "Posts", new {area = "admin" })" class="navbar-brand mr-5">پنل ادمین وب سایت من</a>
            <button class="navbar-toggler" data-target="#myNav" data-toggle="collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="myNav" class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("داشبورد", "Index", "Home", "Admin", htmlAttributes: new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("نوشته ها", "Index", "Posts", "Admin", htmlAttributes: new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("دسته بندی ها", "Index", "Categories", "Admin", htmlAttributes: new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("کامنت ها", "Index", "Comments", "Admin", htmlAttributes: new { @class = "nav-link" })
                    </li>

                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Index" , "Users")" class="nav-link">
                            پروفایل ها
                        </a>

                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index" , "WebsiteDetails")" class="nav-link">
                            اطلاعات وب سایت
                        </a>

                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("SignOut" , "Account" , new {area = "" })" class="nav-link"><i class="fa fa-user-times mr-2"></i>خروج</a>
                    </li>
                    <li class="nav-item">
                        <a href="/" class="nav-link text-success">صفحه اصلی سایت</a>
                    </li>

                </ul>
            </div>

        </div>

    </nav>


    @RenderBody();




    <footer class="bg-secondary">

        <div class="container">
            <p class="text-center lead text-light mt-4 py-5 mb-0">کپی رایت </p>
        </div>

    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>


    <script src="https://cdn.ckeditor.com/4.14.0/full/ckeditor.js"></script>
    <script src="~/Areas/Admin/Content/config.js"></script>
    <script>

        CKEDITOR.replace('PostText', {
            customConfig: '/Areas/Admin/Content/config.js',
            filebrowserImageBrowseUrl: '/Admin/Posts/ListOutCKeditorUploads',
            filebrowserImageUploadUrl: '/Admin/Posts/UploadImageCKEdtior',
            filebrowserUploadMethod: 'form'
            
            
        });






        function updateValue(id, value) {
            // this gets called from the popup window and updates the field with a new value
            var jqueryObjectByClass = $(".cke_dialog_ui_input_text")[1];
            jqueryObjectByClass.value = value;
        }
    </script>
    @RenderSection("scripts", required: false)
</body>

</html>
