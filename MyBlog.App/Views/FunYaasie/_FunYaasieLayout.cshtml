<!DOCTYPE html>

<html lang="fa" dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.rtl.min.css" integrity="sha384-+4j30LffJ4tgIMrq9CwHvn0NjEvmuDCOfk6Rpg2xg7zgOxWWtLtozDEEVvBPgHqE" crossorigin="anonymous">
    <style>

        body {
            margin: 0;
            /*font-family: Vazirmatn, sans-serif !important;*/
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            background-image: url('https://images.unsplash.com/photo-1578662996442-48f60103fc96?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80');
            background-position: center !important;
            background-size: cover !important;
        }

            body::before {
                content: normal;
                background-color: #343434 !important;
                position: relative;
                top: 0px;
                left: 0px;
                width: 100% !important;
                height: 100% !important;
            }
/*Navbar styles */
        .customNavbarBrand {
            color: orange !important;
        }

            .customNavbarBrand:hover {
                color: #0387ce !important;
                position: relative;
                top: -5px;
            }

/*Form Styles*/

        .customInput {
            border-bottom: 1px solid whitesmoke !important;
            color: whitesmoke !important;
            background-color: transparent !important;
        }

            .customInput::placeholder {
                color: rgba(255, 255, 255, 0.281) !important;
            }

            .customInput:focus {
                border-bottom: 2px solid rgb(199, 130, 3) !important;
                box-shadow: none !important;
            }

        .customBtn {
            background-color: orange !important;
            border: 1px solid #00334F !important;
            color: #00334F !important;
        }

        .customErrorText {
            color: rgb(199, 130, 3) !important;
        }

/*card style*/
        .label {
            color: orange;
            font-size: .8rem;
        }

        .customCard {
            box-shadow: 4px 10px 20px orange;
        }
    </style>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-transparent navbar-dark">
            <div class="container-fluid">
                <a href="" @*to={'/'}*@ class="navbar-brand customNavbarBrand">سوژه یاب</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="@Url.Action("Create")" class="nav-link">فرم ثبت سوژه</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
    </div>
</body>
</html>
